<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.rmielnik.demo">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".sampleCallbacks.CallbacksActivity" />
        <activity android:name=".sampleCounter.CounterActivity" />
        <activity android:name=".sampleCustomAdapter.CustomAdapterClassActivity" />
        <activity android:name=".sampleViewHolderFactoryRegistry.ViewHolderFactoryRegistryActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>